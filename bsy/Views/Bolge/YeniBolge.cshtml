@using (Html.BeginForm("YeniBolge", "Bolge", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => Model.sozluk.id)
    @Html.HiddenFor(model => Model.sozluk.Turu)
    @Html.HiddenFor(model => Model.bolge.id)

    <div id="divAna">
        <font size="3" color=black><b>@ViewBag.Title</b></font>
        <br />
        <br />
        <h3>Bölge Bilgileri</h3>
        <fieldset class="field_style cerceveKucuk">
            <table id="bolgeTablosu">
                <tr>
                    <td align="right" class="etiketSabit">
                        Bölge Adı :
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.sozluk.Aciklama, new { @size = 80 })
                        @Html.ValidationMessageFor(model => model.sozluk.Aciklama)
                    </td>
                </tr>
                <tr>
                    <td align="right" class="etiketSabit">
                        Bölge Bilgileri :
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.bolge.Aciklama, new { @size = 120 })
                        @Html.ValidationMessageFor(model => model.bolge.Aciklama)
                    </td>
                </tr>
            </table>
        </fieldset>

        <table>
            <tr>
                <td>
                    <input type="submit" value="Kaydet" class="genelButton" name="btnSubmit" onclick="return BolgeClickHandler();" />
                    <input type="button" value="Bölgeler" class="genelButton" onclick="location.href='@Url.Action("Index", "Bolge")'" />
                </td>
            </tr>
        </table>
    </div>
}

<form method="post" hidden="hidden" action="@Url.Action("Index", "Bolge")" id="frmBolgeIndex">
    @Html.AntiForgeryToken()
    <div id="divIslem">

    </div>
</form>
