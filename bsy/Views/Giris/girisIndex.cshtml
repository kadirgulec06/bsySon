                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="genelLabel etiket uzun"></td>
                                        <td class="genelIkiNoktaLabel"></td>
                                        <td>
                                            @if (Model.girisAktif)
                                            {
                                                <input type="submit" name="btnSubmit" id="btnSubmit" value="Giriş Yap" class="genelButton" />
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </fieldset>
                        </div>
                    }
