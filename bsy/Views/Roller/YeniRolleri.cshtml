                <td class="genelLabel etiket">
                    @Html.LabelFor(model => model.Ad)
                </td>
                <td class="genelIkiNoktaLabel">
                    :
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Ad)
                    @Html.ValidationMessageFor(model => model.Ad)
                </td>
            </tr>
            <tr class="veri">
                @*<td class="genelZorunluAlanLabel"></td>*@
                <td class="genelLabel etiket">
